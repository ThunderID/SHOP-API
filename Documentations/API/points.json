swagger: '2.0'
info:
  title: Point API
  description: Move your app forward with the Point API
  version: 1.0.0
host: localhost:8800
schemes:
  - https
basePath: /v1
produces:
  - application/json
paths:
  /points:
    get:
      summary: Point Lists
      description: |
        The points endpoint returns information about the *BALIN* points
      parameters:
        - name: access_token
          in: query
          description: Access token given by apps.
          required: true
          type: string
        - name: search
          in: query
          description: search parameter.
          required: false
          type: array
          items:
            type: string
        - name: skip
          in: query
          description: How many records are going to be skipped
          required: false
          type: number
          format: integer
        - name: take
          in: query
          description: How many records are going to be taken from resource
          required: false
          type: number
          format: integer
      tags:
        - points
      responses:
        '200':
          description: An array of points' data
          schema:
            type: array
            items:
              $ref: '#/definitions/points'
        default:
          description: Unexpected error
          schema:
            $ref: '#/definitions/Error'
  /points/store:
    post:
      summary: Store a point
      description: >
        Store a point with details those are varians, prices, categories, tags, labels, images
      parameters:
        - name: access_token
          in: query
          description: Access token given by apps.
          required: true
          type: string
          format: string
        - name: id
          in: query
          description: Let it null for new.
          required: true
          type: number
          format: double
        - name: user_id
          in: query
          description: user_id must be registered user id.
          required: true
          type: string
          format: string
        - name: amount
          in: query
          description: debit point (could be plus or minus).
          required: true
          type: number
          format: double
        - name: expired_at
          in: query
          description: date time Y-m-d H:i:s.
          required: true
          type: string
          format: string
        - name: notes
          in: query
          description: could be null.
          required: true
          type: string
      tags:
        - points
      responses:
        '200':
          description: An array of point
          schema:
            type: array
            items:
              $ref: '#/definitions/point'
        default:
          description: Unexpected error
          schema:
            $ref: '#/definitions/Error'
definitions:
  search:
    properties:
      name:
        type: string
        description: 'Search point that hath certain name'
  points:
    properties:
      count:
        type: number
        description: 'Total points.'
      data:
        properties:
          id:
            type: string
          amount:
            type: number
          expired_at:
            type: string
          notes:
            type: string
          user:
            type: array
            items:
              $ref: '#/definitions/user'
  point:
    properties:
      id:
        type: string
      amount:
        type: number
      expired_at:
        type: string
      notes:
        type: string
      user:
        type: array
        items:
          $ref: '#/definitions/user'
  user:
    properties:
      id:
        type: string
      name:
        type: string
      role:
        type: string
      is_active:
        type: boolean
      sso_id:
        type: string
      sso_media:
        type: string
      sso_data:
        type: string
      gender:
        type: string
      date_of_birth:
        type: string
      last_logged_at:
        type: string
      quota_referral:
        type: number
      reference_name:
        type: string
      total_point:
        type: number
      total_reference:
        type: number
  Error:
    type: object
    properties:
      status:
        type: string
      data:
        type: string
      message:
        type: string
      code:
        type: integer
        format: int32
