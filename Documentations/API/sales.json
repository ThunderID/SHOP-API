swagger: '2.0'
info:
  title: Sale API
  description: Move your app forward with the Sale API
  version: 1.0.0
host: localhost:8800
schemes:
  - https
basePath: /v1
produces:
  - application/json
paths:
  /sales:
    get:
      summary: Sale Lists
      description: |
        The Sales endpoint returns information about the *BALIN* Sales
      parameters:
        - name: access_token
          in: query
          description: Access token given by apps.
          required: true
          type: string
        - name: search
          in: query
          description: search parameter (see below).
          required: false
          type: array
          items:
            type: string
        - name: skip
          in: query
          description: How many records are going to be skipped
          required: false
          type: number
          format: integer
        - name: take
          in: query
          description: How many records are going to be taken from resource
          required: false
          type: number
          format: integer
      tags:
        - Sales
      responses:
        '200':
          description: An array of Sales' data
          schema:
            type: array
            items:
              $ref: '#/definitions/sales'
        default:
          description: Unexpected error
          schema:
            $ref: '#/definitions/Error'
  /sale/update/status:
    post:
      summary: Store a Sale
      description: >
        Update sale for status
      parameters:
        - name: access_token
          in: query
          description: Access token given by apps.
          required: true
          type: string
          format: string
        - name: status
          in: query
          description: changed or current status.
          required: true
          type: string
          format: string
        - name: notes
          in: query
          description: only required for delivered status.
          required: false
          type: string
          format: string
        - name: transactionlogs
          in: query
          description: Must be array of logs' transaction.
          required: true
          type: array
          items:
            type: string
      tags:
        - Sales
      responses:
        '200':
          description: An array of Sale
          schema:
            type: array
            items:
              $ref: '#/definitions/sale'
        default:
          description: Unexpected error
          schema:
            $ref: '#/definitions/Error'
  /sale/id/:
    get:
      summary: Sale Detail
      description: 'Get Sale detail information.'
      parameters:
        - name: id
          in: query
          description: Sale id.
          required: true
          type: number
          format: integer
        - name: access_token
          in: query
          description: Access token given by apps.
          required: true
          type: string
          format: string
      tags:
        - Sales
      responses:
        '200':
          description: Sale rich data
          schema:
            type: array
            items:
              $ref: '#/definitions/sale'
        default:
          description: Unexpected error
          schema:
            $ref: '#/definitions/Error'
definitions:
  search:
    properties:
      ondate:
        type: string
        description: 'write in format : mm-dd-yyyy to mm-dd-yyyy where first date was start date and last one was end date'
  sales:
    properties:
      count:
        type: number
        description: 'Total Sales.'
      data:
        properties:
          id:
            type: string
          ref_number:
            type: string
          transact_at:
            type: string
          status:
            type: string
          unique_number:
            type: number
          shipping_cost:
            type: number
          voucher_discount:
            type: number
          amount:
            type: number
          bills:
            type: number
          user:
            type: array
            items:
              $ref: '#/definitions/user'
  sale:
    properties:
      id:
        type: string
      ref_number:
        type: string
      transact_at:
        type: string
      status:
        type: string
      unique_number:
        type: number
      shipping_cost:
        type: number
      voucher_discount:
        type: number
      amount:
        type: number
      bills:
        type: number
      voucher:
        type: array
        items:
          $ref: '#/definitions/voucher'
      user:
        type: array
        items:
          $ref: '#/definitions/user'
      transactiondetails:
        type: array
        items:
          $ref: '#/definitions/details'
      transactionlogs:
        type: array
        items:
          $ref: '#/definitions/logs'
      paidpointlogs:
        type: array
        items:
          $ref: '#/definitions/points'
      payment:
        type: array
        items:
          $ref: '#/definitions/payment'
      shipment:
        type: array
        items:
          $ref: '#/definitions/shipment'
  user:
    properties:
      id:
        type: string
      name:
        type: string
      role:
        type: string
      is_active:
        type: boolean
      sso_id:
        type: string
      sso_media:
        type: string
      sso_data:
        type: string
      gender:
        type: string
      date_of_birth:
        type: string
      last_logged_at:
        type: string
      quota_referral:
        type: number
      reference_name:
        type: string
      total_point:
        type: number
      total_reference:
        type: number
  details:
    properties:
      id:
        type: string
      quantity:
        type: number
      price:
        type: number
      discount:
        type: number
      varian:
        type: array
        items:
          $ref: '#/definitions/varian'
  logs:
    properties:
      id:
        type: string
      status:
        type: string
      changed_at:
        type: string
      notes:
        type: string
  varian:
    properties:
      id:
        type: string
      sku:
        type: string
      size:
        type: string
      current_stock:
        type: number
      on_hold_stock:
        type: number
      inventory_stock:
        type: number
      reserved_stock:
        type: number
      packed_stock:
        type: number
      product:
        type: array
        items:
          $ref: '#/definitions/product'
  product:
    properties:
      id:
        type: string
      name:
        type: string
      upc:
        type: string
      slug:
        type: string
      description:
        type: string
      current_stock:
        type: number
      on_hold_stock:
        type: number
      inventory_stock:
        type: number
      reserved_stock:
        type: number
      packed_stock:
        type: number
      price:
        type: number
      promo_price:
        type: number
      thumbnail:
        type: string
      image_xs:
        type: string
      image_sm:
        type: string
      image_md:
        type: string
      image_lg:
        type: string
  points:
    properties:
      id:
        type: string
      amount:
        type: number
      expired_at:
        type: string
      notes:
        type: string
  payment:
    properties:
      id:
        type: string
      method:
        type: string
      destination:
        type: string
      account_name:
        type: string
      account_number:
        type: string
      ondate:
        type: string
      amount:
        type: number
  shipment:
    properties:
      id:
        type: string
      receipt_number:
        type: string
      receiver_name:
        type: string
      address:
        type: array
        items:
          $ref: '#/definitions/address'
      courier:
        type: array
        items:
          $ref: '#/definitions/courier'
  address:
    properties:
      id:
        type: string
      phone:
        type: string
      address:
        type: string
      zipcode:
        type: string
  courier:
    properties:
      id:
        type: string
      name:
        type: string
  voucher:
    properties:
      id:
        type: string
      code:
        type: string
      type:
        type: string
      quota:
        type: number
      started_at:
        type: string
      expired_at:
        type: string
  Error:
    type: object
    properties:
      status:
        type: string
      data:
        type: string
      message:
        type: string
      code:
        type: integer
        format: int32
