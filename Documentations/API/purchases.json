swagger: '2.0'
info:
  title: Purchase API
  description: Move your app forward with the Purchase API
  version: 1.0.0
host: localhost:8800
schemes:
  - https
basePath: /v1
produces:
  - application/json
paths:
  /purchases:
    get:
      summary: Purchase Lists
      description: |
        The Purchases endpoint returns information about the *BALIN* Purchases
      parameters:
        - name: access_token
          in: query
          description: Access token given by apps.
          required: true
          type: string
        - name: search
          in: query
          description: search parameter (see below).
          required: false
          type: array
          items:
            type: string
        - name: skip
          in: query
          description: How many records are going to be skipped
          required: false
          type: number
          format: integer
        - name: take
          in: query
          description: How many records are going to be taken from resource
          required: false
          type: number
          format: integer
      tags:
        - Purchases
      responses:
        '200':
          description: An array of Purchases' data
          schema:
            type: array
            items:
              $ref: '#/definitions/purchases'
        default:
          description: Unexpected error
          schema:
            $ref: '#/definitions/Error'
  /purchases/store:
    post:
      summary: Store a Purchase
      description: >
        Store a Purchase with details those are varians, prices, categories, tags, labels, images
      parameters:
        - name: access_token
          in: query
          description: Access token given by apps.
          required: true
          type: string
          format: string
        - name: id
          in: query
          description: Let it null for new.
          required: true
          type: number
          format: double
        - name: supplier_id
          in: query
          description: supplier id.
          required: true
          type: string
          format: string
        - name: transactiondetails
          in: query
          description: Must be array of details transaction.
          required: true
          type: array
          items:
            type: string
        - name: transactionlogs
          in: query
          description: Must be array of logs' transaction.
          required: true
          type: array
          items:
            type: string
      tags:
        - Purchases
      responses:
        '200':
          description: An array of Purchase
          schema:
            type: array
            items:
              $ref: '#/definitions/purchase'
        default:
          description: Unexpected error
          schema:
            $ref: '#/definitions/Error'
  /purchase/id/:
    get:
      summary: Purchase Detail
      description: 'Get Purchase detail information.'
      parameters:
        - name: id
          in: query
          description: Purchase id.
          required: true
          type: number
          format: integer
        - name: access_token
          in: query
          description: Access token given by apps.
          required: true
          type: string
          format: string
      tags:
        - Purchases
      responses:
        '200':
          description: Purchase rich data
          schema:
            type: array
            items:
              $ref: '#/definitions/purchase'
        default:
          description: Unexpected error
          schema:
            $ref: '#/definitions/Error'
definitions:
  search:
    properties:
      name:
        type: string
        description: 'Search Purchase that hath certain name'
  purchases:
    properties:
      count:
        type: number
        description: 'Total Purchases.'
      data:
        properties:
          id:
            type: string
          ref_number:
            type: string
          transact_at:
            type: string
          status:
            type: string
          amount:
            type: number
          supplier:
            type: array
            items:
              $ref: '#/definitions/supplier'
  purchase:
    properties:
      id:
        type: string
      ref_number:
        type: string
      transact_at:
        type: string
      status:
        type: string
      amount:
        type: number
      supplier:
        type: array
        items:
          $ref: '#/definitions/supplier'
      transactiondetails:
        type: array
        items:
          $ref: '#/definitions/details'
      transactionlogs:
        type: array
        items:
          $ref: '#/definitions/logs'
  supplier:
    properties:
      id:
        type: string
      name:
        type: string
  details:
    properties:
      id:
        type: string
      quantity:
        type: number
      price:
        type: number
      discount:
        type: number
      varian:
        type: array
        items:
          $ref: '#/definitions/varian'
  logs:
    properties:
      id:
        type: string
      status:
        type: string
      changed_at:
        type: string
      notes:
        type: string
  varian:
    properties:
      id:
        type: string
      sku:
        type: string
      size:
        type: string
      current_stock:
        type: number
      on_hold_stock:
        type: number
      inventory_stock:
        type: number
      reserved_stock:
        type: number
      packed_stock:
        type: number
      product:
        type: array
        items:
          $ref: '#/definitions/product'
  product:
    properties:
      id:
        type: string
      name:
        type: string
      upc:
        type: string
      slug:
        type: string
      description:
        type: string
      current_stock:
        type: number
      on_hold_stock:
        type: number
      inventory_stock:
        type: number
      reserved_stock:
        type: number
      packed_stock:
        type: number
      price:
        type: number
      promo_price:
        type: number
      thumbnail:
        type: string
      image_xs:
        type: string
      image_sm:
        type: string
      image_md:
        type: string
      image_lg:
        type: string
  Error:
    type: object
    properties:
      status:
        type: string
      data:
        type: string
      message:
        type: string
      code:
        type: integer
        format: int32
